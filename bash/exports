# Editor
if type nvim >/dev/null 2>/dev/null;
then
	export VISUAL=nvim
    export EDITOR="$VISUAL"
	alias vi=nvim
	alias vim=nvim
else if type vim >/dev/null 2>/dev/null;
then
	export VISUAL=vim
    export EDITOR="$VISUAL"
	alias vi=vim
else
	export EDITOR=`which vi`
fi

# Needed for svn
unset USERNAME
# Larger bash history (default is 500)
export HISTSIZE=10000
export HISTFILESIZE=$HISTSIZE
# Erase duplicates
export HISTCONTROL=erasedups

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Color term
#export TERM="xterm-265color"

# Tell ls to be colourful
export CLICOLOR=1

# AutoSSH Config
export AUTOSSH_PIDFILE=/tmp/autossh.pid

# search current directory, current include dir, home directory, and projects folder
export CDPATH=".:./Include:~":~/project/:~/projects/alchemy/git
